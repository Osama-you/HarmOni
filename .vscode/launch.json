{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron: Main (apps/frontend)",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start"],
      "env": {
        "MAIN_ARGS": "--inspect=5858 --remote-debugging-port=9223"
      },
      "cwd": "${workspaceFolder}/apps/frontend" // Points to apps/frontend subfolder
    },
    {
      "name": "Electron: Renderer (apps/frontend)",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}/apps/frontend", // Also points to apps/frontend subfolder
      "timeout": 15000
    }
  ],
  "compounds": [
    {
      "name": "Electron: All (apps/frontend)",
      "configurations": [
        "Electron: Main (apps/frontend)",
        "Electron: Renderer (apps/frontend)"
      ]
    }
  ]
}
